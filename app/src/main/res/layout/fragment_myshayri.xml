<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/appbackgroundcolour"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.MyshayriFragment">

    <LinearLayout
        android:id="@+id/lenealayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10ssp"
            android:fontFamily="@font/bangers"
            android:text="It is Ishkachi Nauka Shayari's.."
            android:textColor="@color/ligtepurple"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intro_title"
            android:layout_marginTop="@dimen/_2sdp"
            android:lineSpacingExtra="@dimen/_3ssp"
            android:text="This shayari is a different shayari's that you will find  only in this application.."
            android:textAlignment="center"
            android:fontFamily="@font/amita"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:text=" Marathi +  Hindi"
            android:textColor="@color/ligtepurple"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_3ssp"
            android:fontFamily="@font/amita"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:src="@drawable/intro_image4"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_200sdp"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/lenealayout"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/custome_button_myshayarifragment"
        android:drawableRight="@drawable/icon_arrow_right_24"
        android:fontFamily="@font/boogaloo"
        android:text="     ishakachi navka mode     "
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="@dimen/_14ssp"
        android:textStyle="italic" />

</RelativeLayout>