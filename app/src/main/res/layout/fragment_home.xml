<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#323240"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10ssp"
            android:padding="@dimen/_2ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:orientation="vertical">

            <Button
                android:id="@+id/loveshayari_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/scroll_button"
                android:drawableRight="@drawable/icon_arrow_right_24"
                android:fontFamily="@font/boogaloo"
                android:text="Love Shayari"
                android:textStyle="italic"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/romaticshayari_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/scroll_button"
                android:textStyle="italic"
                android:fontFamily="@font/boogaloo"
                android:drawableRight="@drawable/icon_arrow_right_24"
                android:text="Romantic Shayari"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/attitudeshayari_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/scroll_button"
                android:textStyle="italic"
                android:fontFamily="@font/boogaloo"
                android:drawableRight="@drawable/icon_arrow_right_24"
                android:text="Attitude Shayari"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/brokenshayari_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/scroll_button"
                android:textStyle="italic"
                android:fontFamily="@font/boogaloo"
                android:drawableRight="@drawable/icon_arrow_right_24"
                android:text="Broken Shayari"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/sadshayari_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/scroll_button"
                android:textStyle="italic"
                android:fontFamily="@font/boogaloo"
                android:drawableRight="@drawable/icon_arrow_right_24"
                android:text="Sad Shayari"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/bewafavashayari_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/scroll_button"
                android:textStyle="italic"
                android:fontFamily="@font/boogaloo"
                android:drawableRight="@drawable/icon_arrow_right_24"
                android:text="Bewafa Shayari"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <Button
