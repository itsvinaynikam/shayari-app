                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/birthshari_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="italic"
                android:background="@drawable/scroll_button"
                android:drawableRight="@drawable/icon_arrow_right_24"
                android:fontFamily="@font/boogaloo"
                android:text="Birthday Shayari"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/soryyshayri_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/scroll_button"
                android:drawableRight="@drawable/icon_arrow_right_24"
                android:textStyle="italic"
                android:fontFamily="@font/boogaloo"
                android:text="Sorry Shayari"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>