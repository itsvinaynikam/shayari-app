<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:backgroundTint="@color/appbackgroundcolour"
    android:background="#ffffff">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/intro_img"
        android:layout_width="wrap_content"
        android:src="@drawable/intro_image1"
       android:layout_marginRight="@dimen/_10ssp"
        android:layout_marginLeft="@dimen/_10ssp"
        app:shapeAppearanceOverlay="@style/SpecificCornerRounded"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/_200sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10ssp"
            android:fontFamily="@font/boogaloo"
            android:text="shayaris Wordl"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:id="@+id/intro_description"
            android:lineSpacingExtra="@dimen/_14ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8ssp"
            android:text="TextView"
            android:fontFamily="@font/amita"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@+id/intro_title"/>



    </LinearLayout>






</LinearLayout>